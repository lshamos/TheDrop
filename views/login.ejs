<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Original+Surfer" rel="stylesheet">
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/styles.css">
    <title></title>
  </head>
  <body>
    <% include ../public/templates/navbar %>

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.10&appId=1949429758633181";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class='container'>
      <div class='container2'>
      <h1>Login</h1>

        <form action="/login" method="post">
            <div class="field">
              <div class='control'>
                <input type="text" class="input is-info" name="email" placeholder='Email'>
              </div>
            </div>
            <div class="field">
              <div class='control'>
                <input type="password" class="input is-info" name="password" placeholder='Password'>
              </div>
            </div>

            <button type="submit" class="button is-info">Login</button>
        </form>

        <div class='hr'>
          <hr>
        </div>

        <div class="fb-login-button" data-width="20" data-max-rows="1" data-size="medium" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="true"></div><br><br>
        <span class='surf-font'>
          <p>Don't have an account? <a href="/signup">Signup</a></p>
          <p>Go back <a href="/">Home</a></p>
        </span>
      </div>
    </div>
  </body>
</html>
